{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <h1>Documents</h1>
    <a href="{{ path('newdocument')}}"> Ajouter un nouveau document </a>

    <table class="table">
     {% for document in documents %} 
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }} {{ include('documents/_delete_form.html.twig') }}<a href="{{ path('app_documents_edit', {'id': document.id}) }}">edit</a></td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
              {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_documents_index') }}">back to list</a>

    

   
{% endblock %}
