{% extends 'base.html.twig' %}

{% block title %}Liste des contacts {% endblock %}

{% block body %}
<script src="https://kit.fontawesome.com/70f98bf25c.js" crossorigin="anonymous"></script>
<br>
 <h3 style="text-align:center"> Liste des contacts </h3>
 <br>
 <div class="container">
<table class="table table-hover">
  <thead>
    <tr class="table-primary">
      <th scope="col">E-mail </th>

      <th scope="col"> Nom Prenom </th>

      <th scope="col"> Fonction </th>

     <th scope="col"> Entreprise    </th>

      <th scope="col">  Action </th>
      
      
    </tr>
  </thead>
  <tbody>
  
  
      {% for contact in contacts %} 
    
       <tr class="table-active"> 
    
        <td>{{contact.mail}}</td>
        
        <td> {{contact.identite}}</td>
        <td> {{contact.fonction}}</td>
        <td> {{contact.entreprise }}</td>
       
    <td> <a href={{path('editcontact',{'id':contact.id})}}> <i class="fa-regular fa-pen-to-square">  </i>    </a>    
    <a href={{path('deletecontact',{'id':contact.id})}}>   <i class="fa-solid fa-trash"> </i> </a> 
   <a href={{path('mail',{'id':contact.id})}}>  <i class="fa-regular fa-envelope"></i></a>   </td>
    </tr>

    {% else %} <p> Aucun contact inscrit </p>
      {% endfor %}

      
  </tbody>
</table>
{% endblock %}
